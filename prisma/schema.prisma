generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?
  role          String    @default("USER")
  isGatekeeper  Boolean   @default(false)
  companyId     String?
  tenantId      String?
  firstName     String?
  lastName      String?
  plan          String    @default("FREE")
  accounts      Account[]
  sessions      Session[]
  company       Company?  @relation(fields: [companyId], references: [id])
  createdPositions JobPosting[] @relation("CreatedPositions")
  createdCandidates Candidate[] @relation("CreatedCandidates")
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([email])
  @@index([role])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Company {
  id        String   @id @default(cuid())
  name      String
  tenantId  String?  @unique
  domain    String?  @unique
  plan      String   @default("FREE")
  users     User[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Candidate {
  id                String   @id @default(cuid())
  firstName         String
  lastName          String
  email             String   @unique
  phoneNumber       String?
  desiredRoles      String[]
  skills            String[]
  industries        String[]
  seniorityLevel    String?
  certifications    String[]
  location          String?
  profileDataJson   Json?
  
  status            String   @default("DRAFT")
  creatorId         String?
  creator           User?    @relation("CreatedCandidates", fields: [creatorId], references: [id])

  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

model JobPosting {
  id                    String    @id @default(cuid())
  reference             String?   @unique // Auto-generated reference
  
  // Core Fields
  jobTitle              String
  companyName           String
  location              String
  country               String
  status                String    @default("ACTIVE")
  
  // Details
  description           String
  industrySector        String?
  seniorityLevel        String
  employmentType        String    @default("CONTRACT")
  durationMonths        Float?
  startDate             DateTime?
  endDate               DateTime?
  contractDuration      String?   // Legacy, prefer durationMonths/dates
  extensionPossible     Boolean   @default(false)
  
  // Work Arrangement (Flattened)
  remoteAllowed         Boolean   @default(false)
  onSiteDays            Int?

  // Salary (Flattened)
  minSalary             Float?
  maxSalary             Float?
  currency              String?   @default("EUR")

  // Contact (Flattened)
  contactName           String?
  contactEmail          String?
  contactPhone          String?

  // Arrays (Postgres specific)
  responsibilities      String[]
  skills                String[]
  objectives            String[]
  education             String[]
  experience            String[]
  languages             String[]  // Simple list (Legacy compat)

  // Relations
  languageRequirements  JobPostingLanguage[]
  
  // Metadata
  postingDate           DateTime  @default(now())
  lastUpdated           DateTime  @updatedAt
  viewCount             Int       @default(0)
  applicationCount      Int       @default(0)
  
  creatorId             String?
  creator               User?     @relation("CreatedPositions", fields: [creatorId], references: [id])

  // Legacy / Unused (To be removed)
  externalReference     String?
  source                String?
  sourceUrl             String?
  companyDivision       String?
  organizationalUnit    String?
  roleCategory          String?
  roleProfile           String?
  workLocation          Json?     // Deprecated
  missionContext        String?
  industry              String?
  domain                String?
  travelRequired        String?
  applicationMethod     String?
  applicationDeadline   DateTime?
}

model JobPostingLanguage {
  id           String     @id @default(cuid())
  jobPostingId String
  jobPosting   JobPosting @relation(fields: [jobPostingId], references: [id], onDelete: Cascade)
  language     String
  level        String
  mandatory    Boolean    @default(false)
}

enum IndustrySector {
  Banking
  Insurance
  Finance
  IT
  Healthcare
  Consulting
  Other
}

model RateLimit {
  identifier String   @id
  count      Int      @default(0)
  resetAt    DateTime

  @@index([resetAt])
}
