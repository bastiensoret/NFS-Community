generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                String       @id @default(cuid())
  name              String?
  email             String       @unique
  emailVerified     DateTime?
  image             String?
  password          String?
  role              String       @default("USER")
  isGatekeeper      Boolean      @default(false)
  companyId         String?
  tenantId          String?
  firstName         String?
  lastName          String?
  plan              String       @default("FREE")
  createdAt         DateTime     @default(now())
  updatedAt         DateTime     @updatedAt
  accounts          Account[]
  createdCandidates Candidate[]  @relation("CreatedCandidates")
  createdPositions  JobPosting[] @relation("CreatedPositions")
  sessions          Session[]
  company           Company?     @relation(fields: [companyId], references: [id])

  @@index([email])
  @@index([role])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Company {
  id        String   @id @default(cuid())
  name      String
  tenantId  String?  @unique
  domain    String?  @unique
  plan      String   @default("FREE")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  users     User[]
}

model Candidate {
  id             String   @id @default(cuid())
  firstName      String
  lastName       String
  email          String   @unique
  phoneNumber    String
  seniorityLevel String
  birthDate      DateTime?
  location       String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  desiredRoles   String[]
  industries     String[]
  certifications String[]
  creatorId      String?
  education      String[]
  educationLevel String?
  hardSkills     String[]
  languages      String[]
  previousRoles  String[]
  softSkills     String[]
  status         String   @default("DRAFT")
  creator        User?    @relation("CreatedCandidates", fields: [creatorId], references: [id])
}

model JobPosting {
  id                   String               @id @default(cuid())
  jobTitle             String
  companyName          String
  seniorityLevel       String
  employmentType       String               @default("CONTRACT")
  startDate            DateTime?
  endDate              DateTime?
  extensionPossible    Boolean              @default(false)
  description          String
  status               String               @default("ACTIVE")
  responsibilities     String[]
  objectives           String[]
  education            String[]
  experience           String[]
  skills               String[]
  country              String
  durationMonths       Float?
  industrySector       String?
  location             String
  reference            String?              @unique
  creatorId            String?
  contactEmail         String?
  contactName          String?
  contactPhone         String?
  currency             String?              @default("EUR")
  maxSalary            Float?
  minSalary            Float?
  onSiteDays           Int?
  remoteAllowed        Boolean              @default(false)
  createdAt            DateTime             @default(now())
  updatedAt            DateTime             @updatedAt
  creator              User?                @relation("CreatedPositions", fields: [creatorId], references: [id])
  languageRequirements JobPostingLanguage[]
}

model JobPostingLanguage {
  id           String     @id @default(cuid())
  jobPostingId String
  language     String
  level        String
  mandatory    Boolean    @default(false)
  jobPosting   JobPosting @relation(fields: [jobPostingId], references: [id], onDelete: Cascade)
}

model RateLimit {
  identifier String   @id
  count      Int      @default(0)
  resetAt    DateTime

  @@index([resetAt])
}

enum IndustrySector {
  Banking
  Insurance
  Finance
  IT
  Healthcare
  Consulting
  Other
}
